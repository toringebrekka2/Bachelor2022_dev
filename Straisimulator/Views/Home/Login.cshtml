@model Straisimulator.ViewModels.IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}
@{
	Layout = null;
}
 <link rel="stylesheet" type="text/css" href="~/css/login.css" asp-append-version="true"/>

<div class="login-wrap">
	<div class="login-html">
		<input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Logg inn</label>
		<div class="login-form">
			<div class="sign-in-htm">
				<div class="group">
					<label for="user" class="label">Brukernavn</label>
					<input id="user" type="text" class="input">
				</div>
				<div class="group">
					<label for="pass" class="label">Passord</label>
					<input id="pass" type="password" class="input" data-type="password">
				</div>
				<div class="group">
					<input id="check" type="checkbox" class="check" checked>
					<label for="check"><span class="icon"></span> Hold meg pålogget</label>
				</div>
				<div class="group">
					<input type="submit" class="button" value="Logg inn">
				</div>
				<div class="hr"></div>
				<div class="foot-lnk">
					<a href="#forgot">Glemt passord?</a>
				</div>
			</div>
		</div>
	</div>
</div>